{% extends 'base.html.twig' %}

{% block body %}
    <div class="page-header">
        <div class="row align-items-center">
            <div class="col-auto">
                <h2 class="page-title">
                    Изделия и Услуги
                </h2>
            </div>
            <div class="col-auto">
                <div class="card-options">
                    <a href="{{ path('services_new') }}" class="btn btn-primary">+ Добавить</a>
                </div>
            </div>
        </div>
    </div>
    <div class="row row-deck">
        {% for service in services %}
            <div class="col-sm-6 col-xl-4">
                <div class="card d-flex flex-column">
                    <a href="{{ path('services_edit', {'id': service.id}) }}">
                        <img class="card-img-top" src="{{ vich_uploader_asset(service, 'imageFile') }}" alt="">
                    </a>
                    <div class="card-body d-flex flex-column">
                        <h3 class="card-title"><a href="{{ path('services_edit', {'id': service.id}) }}">{{ service.title }}</a></h3>
                        <div class="text-muted">{{ service.anonce }}</div>
                        <div class="d-flex align-items-center pt-5 mt-auto">
                            Опубликовано: {{ service.isActive ? '<span class="badge bg-green mr-2">да</span>' : '<span class="badge bg-red mr-2">НЕТ</span>' }}

                            <a href="{{ path('services_edit', {'id': service.id}) }}" class="btn btn-secondary mr-2">Редактировать</a>
                            {{ include('services/_delete_form.html.twig') }}
                        </div>
                    </div>
                </div>
            </div>
        {% else %}
         Пока нет данных
        {% endfor %}
    </div>
{% endblock %}
