{% extends 'base.html.twig' %}


{% block body %}
    <div class="page-header">
        <div class="row align-items-center">
            <div class="col-auto">
                <h2 class="page-title">
                    Пользователи
                </h2>
            </div>

            <!-- Page title actions -->
            <div class="col-auto ml-auto d-print-none">
                <div class="d-flex">

                    <a href="{{ path('user_new') }}" class="btn btn-primary">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="icon"><line x1="12" y1="5" x2="12" y2="19"></line><line x1="5" y1="12" x2="19" y2="12"></line></svg>
                        Новый пользователь
                    </a>
                </div>
            </div>
        </div>
    </div>
<div class="row">

    {% for user in users %}
    <div class="col-md-6 col-lg-4">
        <div class="card">
            <div class="card-body">
                <div class="row row-sm align-items-center">
                    <div class="col-auto">
                        <span class="avatar avatar-md" style=""></span>
                    </div>
                    <div class="col">
                        <h3 class="mb-0"><a href="#">{{ user.firstname ~ ' ' ~ user.lastname  }}</a></h3>
                        <div class="text-muted text-h5">Администратор</div>
                    </div>
                    <div class="col-auto lh-1 align-self-start">
                      <span class="badge bg-gray-lt">

                      </span>
                    </div>
                </div>
                <div class="row align-items-center mt-4">

                    <div class="col-auto">
                        <div class="btn-list">
                            <a href="{{ path('user_edit', {'id': user.id}) }}" class="btn btn-secondary btn-sm">
                                Редактировать
                            </a>
                            <a href="#" class="btn btn-secondary btn-sm">
                                Profile
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {% endfor %}
</div>
 {% endblock %}
