{% extends 'base.html.twig' %}

{% block body %}
    <div class="page-header">
        <div class="row align-items-center">
            <div class="col-auto">
                <h2 class="page-title">
                    Настройки / Производители материалов
                </h2>
            </div>
        </div>
    </div>
    <div class="card">
        <div class="card-header d-print-none">
            <h3 class="card-title"></h3>
            <div class="card-options">
                <a href="{{ path('productions_new') }}" class="btn btn-primary">Добавить производителя</a>
            </div>
        </div>
        <div class="card-body">
        <div class="table-responsive">
            <table class="table">
                <thead>
                <tr>
                    <th>Id</th>
                    <th>Названия</th>
                    <th>Действия</th>
                </tr>
                </thead>
                <tbody>
                {% for production in productions %}
                    <tr>
                        <td>{{ production.id }}</td>
                        <td>{{ production.name }}</td>
                        <td>
                            <div class="btn-list">
                            <a href="{{ path('productions_edit', {'id': production.id}) }}" class="btn btn-secondary">Редактировать</a>
                            {{ include('productions/_delete_form.html.twig') }}
                            </div>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="3">Нет данных</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        </div>
    </div>
{% endblock %}
