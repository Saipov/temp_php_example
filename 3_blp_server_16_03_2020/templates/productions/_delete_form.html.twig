<form method="post" action="{{ path('productions_delete', {'id': production.id}) }}" onsubmit="return confirm('Вы уверены, что хотите удалить этот элемент?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ production.id) }}">
    <button class="btn btn-secondary">Удалить</button>
</form>
