{{ form_start(form,  {'attr':{'class': "card"}}) }}
<div class="card-header">
    <h4 class="card-title">{{ title_label|default('Новый элемент') }}</h4>
</div>
<div class="card-body">
    <div class="row">
        <div class="col-6">


            {{ form_label(form.name, null, {
                'label': 'Название',
                'label_attr': {'class': 'form-label'}
            }) }}
            {{ form_widget(form.name, { 'attr': {'class': 'form-control'} }) }}
        </div>

    </div>
</div>
<div class="card-footer text-right">
    <div class="d-flex">
        <a href="{{ path('productions_index') }}" class="btn btn-link">Отмена</a>
        <button class="btn btn-primary ml-auto">{{ button_label|default('Сохранить') }}</button>

    </div>
</div>


{{ form_end(form) }}
