{{ form_start(form,  {'attr':{'class': "card"}}) }}
<div class="card-header">
    <h4 class="card-title">{{ title_label|default('Новый элемент') }}</h4>
</div>
<div class="card-body">
    <div class="row">
        <div class="col-12">
            <div class="mb-3">
            {{ form_label(form.name, null, {
                'label': 'Название категории',
                'label_attr': {'class': 'form-label'}
            }) }}
            {{ form_widget(form.name, { 'attr': {'class': 'form-control'} }) }}
            </div>
            <div class="mb-3">
                {{ form_label(form.imageFile, null, {
                    'label': 'Изображение категории',
                    'label_attr': {'class': 'form-label'}
                }) }}
                {{ form_widget(form.imageFile, { 'attr': {'class': 'form-control'} }) }}
            </div>
            <div class="mb-3">
                {{ form_label(form.minPrice, null, {
                    'label': 'Минимальная цена',
                    'label_attr': {'class': 'form-label'}
                }) }}
                {{ form_widget(form.minPrice, { 'attr': {'class': 'form-control'} }) }}
            </div>
        </div>

    </div>
</div>
<div class="card-footer text-right">
    <div class="d-flex">
        <a href="{{ path('categories_index') }}" class="btn btn-link">Отмена</a>
        <button class="btn btn-primary ml-auto">{{ button_label|default('Сохранить') }}</button>

    </div>
</div>


{{ form_end(form) }}
